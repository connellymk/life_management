# ==================== Notion ====================
NOTION_TOKEN=ntn_your_token_here

# Calendar Events Database
NOTION_CALENDAR_DB_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Health Databases
# Daily Tracking serves as both health metrics AND the central "Day" table
# for cross-database relations (Calendar Events, Garmin Activities, etc.)
NOTION_WORKOUTS_DB_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NOTION_DAILY_TRACKING_DB_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==================== Google Calendar ====================
GOOGLE_CALENDAR_IDS=primary
GOOGLE_CALENDAR_NAMES=Personal

# ==================== Garmin ====================
GARMIN_EMAIL=your_email@example.com
GARMIN_PASSWORD=your_password

# ==================== Kroger / Smith's Food & Drug ====================
