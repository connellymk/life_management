# ===================================================
# Calendar Sync - Environment Variables Template
# ===================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains secrets!

# === Google Calendar ===
GOOGLE_CLIENT_SECRET_PATH=credentials/google_client_secret.json
GOOGLE_TOKEN_PATH=credentials/google_token.json
# Calendar IDs (comma-separated for multiple calendars)
# Use 'primary' for your primary calendar
GOOGLE_CALENDAR_IDS=primary
# Names for each calendar (for display in Notion, comma-separated)
GOOGLE_CALENDAR_NAMES=Personal

# === Notion ===
# Get this from: https://www.notion.so/my-integrations
# Token format: secret_xxxxxxxxxxxx OR ntn_xxxxxxxxxxxx (newer format)
NOTION_TOKEN=ntn_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Get database IDs by opening the database in Notion and copying the URL
# The database ID is the 32-character string after the workspace name
# Example: https://notion.so/workspace/Database-1234567890abcdef1234567890abcdef?v=...
NOTION_CALENDAR_DB_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# === Microsoft Graph (MSU Calendars - for future use) ===
MS_CLIENT_ID=
MS_CLIENT_SECRET=
MS_TENANT_ID=
MS_TOKEN_PATH=credentials/ms_token.json
MS_CALENDAR_NAMES=MSU Student,MSU Employee

# === Strava (Training - for future use) ===
STRAVA_CLIENT_ID=
STRAVA_CLIENT_SECRET=
STRAVA_TOKEN_PATH=credentials/strava_token.json

# === Sync Configuration ===
# How many days in the past to sync events
SYNC_LOOKBACK_DAYS=7
# How many days in the future to sync events
SYNC_LOOKAHEAD_DAYS=90
# How often to sync (in minutes)
SYNC_INTERVAL_MINUTES=15

# === Logging ===
LOG_LEVEL=INFO
LOG_PATH=logs/sync.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# === Notifications (optional) ===
NOTIFICATION_EMAIL=
SLACK_WEBHOOK_URL=
